{
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext",
    },
    "esm":true
  },
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2015","es2016","es2017","es2018","es2019","es2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules","./dist"],
  "include": ["./**/*"]
}
